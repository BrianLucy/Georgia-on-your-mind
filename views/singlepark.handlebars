<img class='homepagebgimg' src="../images/cloudland.jpg"> 
<div>
<br>
  <div class="container">
    <br>
    <h2 class="text-center">{{name}} </h2>
    <div class="text-center">County: {{county}} </div>
    <img class="parksimg img-fluid" style="border-radius: 15px;" src="{{image}}">
    <br>
    <p class="text-center col-md-11"> {{content}} </p>
  </div>
  <br>


  {{#if loggedIn}}
  <h2 class="text-center container col-4">Write a Review!</h2>
  <br>
  <div class="text-center">
    <form class="col-md-8">
      <div class="form-group">
        <label for="rating">Rating</label>
        <select class="form-control" id="rating">
          <option value="5">5 stars</option>
          <option value="4">4 stars</option>
          <option value="3">3 stars</option>
          <option value="2">2 stars</option>
          <option value="1">1 star</option>
        </select>
      </div>
      <div class="form-group">
        <label for="review">Review</label>
        <textarea class="form-control" id="reviewContent" rows="8"></textarea>
      </div>
      <button type="submit" class="btn btn-primary" id="newReview">Submit</button>
    </form>
  </div>

{{else}}
<h2 class="text-center container col-6"> <a href="/login" style="color:beige">Log in</a> to leave a review </h2>
{{/if}}

<br>
<h2 class="text-center container col-4">Park Reviews </h2>
<br>
<div>
  {{#each review as |review|}}
  <div class=" container col-8">
    <br>
    <div class="sig">
      <p> User: {{review.user_name}}</p>
    </div>
      <p>Rating: {{review.rating}}</p>
      <p>Description: {{review.content}}</p>

      <div class="updatepanel">
        <div class="updateform" id="{{review.id}}" style="display: none">
          <div class="text-center">
          <h4>Update Post!</h4>
          <laber for="rating">Rating:</label>
          <input
            type="text"
            id="updatepostsub"
            name="subject"
          />
          <br />
      
          <label for="comment"></label>
          <label for="comment">Description: </label>
          <textarea
            id="updatepostdescr"
            name="comment"
            rows="7"
          ></textarea>
          <br />
          <br />
          <button class="inputUpdateFields btn btn-light"> Update </button>
          <br />
          <br>
          <div id="cancelbtn"></div>
        </div>
        </div>
      </div>

{{#if (isEqual review.user_name ../user)}}
   <button type="delete" class="delbtn btn btn-secondary" id="{{review.id}}">Delete Post</button>
   <br>
    <button type="update" class="updatebtn btn btn-secondary" id="{{review.id}}">Update Post</button>
{{/if}}

      <br>
</div>
  <br>
  {{/each}}
</div>
</div>
