<div>
    {{each posts as |post| }}
    <div>
        <h2>{{post.name}} </h2>
        <div>{{post.county}} </div>
        <img src="{{post.image}}">
        <p> {{post.content}} </p>
    </div>
    {{/each}}
    <hr>

  {{#each comments}}
    <div>
      <h3>{{this.title}}</h3>
      <p>{{this.content}}</p>
    </div>
  {{/each}}

  <hr>
  
</div>